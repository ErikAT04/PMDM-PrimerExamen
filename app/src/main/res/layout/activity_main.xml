<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/palabraModificadaTView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="[Palabra Modificada]"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adivina la Palabra"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/palabraModificadaTView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.538" />

    <EditText
        android:id="@+id/palabraEText"
        android:layout_width="235dp"
        android:layout_height="56dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/palabraModificadaTView"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/palabraModificadaTView"
        app:layout_constraintTop_toBottomOf="@+id/palabraModificadaTView" />

    <Button
        android:id="@+id/comprobarBtt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Comprobar"
        app:layout_constraintEnd_toEndOf="@+id/palabraEText"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/palabraEText"
        app:layout_constraintTop_toBottomOf="@+id/tiempoTField" />

    <Button
        android:id="@+id/playBtt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Â¡Vamos a jugar!"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="@+id/comprobarBtt"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="@+id/comprobarBtt"
        app:layout_constraintTop_toBottomOf="@+id/comprobarBtt"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/puntosTField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Puntos:"
        app:layout_constraintEnd_toEndOf="@+id/palabraEText"
        app:layout_constraintStart_toStartOf="@+id/palabraEText"
        app:layout_constraintTop_toBottomOf="@+id/pistaTView" />

    <TextView
        android:id="@+id/tiempoTField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="Tiempo restante:"
        app:layout_constraintEnd_toEndOf="@+id/puntosTField"
        app:layout_constraintStart_toStartOf="@+id/puntosTField"
        app:layout_constraintTop_toBottomOf="@+id/puntosTField" />

    <TextView
        android:id="@+id/pistaTView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="[Pista]"
        app:layout_constraintEnd_toEndOf="@+id/palabraEText"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/palabraEText"
        app:layout_constraintTop_toBottomOf="@+id/palabraEText" />
</androidx.constraintlayout.widget.ConstraintLayout>